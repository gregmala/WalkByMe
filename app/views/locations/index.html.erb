<div class="container">
  <% @locations.each do |location| %>
    <% if location.user == current_user %>
      <div class="card mb-3 cardsadress">
        <div class="card-body d-flex align-items-center text-center">
          <h2 class="card-title mb-0"><%= link_to location.name, user_location_path(location.user, location), class: "card-link" %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Add new location", new_user_location_path, class: "btn btn-success" %>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cardsadress {
    border-radius: 10px;
    margin-top: 20px;
    height: 70px;
    width: 180px;
  }

  .card-link {
    color: inherit;
    text-decoration: none;
  }

  .card-body {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

</style>
