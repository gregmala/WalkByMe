  }

  .cardloc {
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    border-radius: 50px;
  }

  .cardloc:hover {
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.3);
  }

  .card-body-icons {
    display: flex;
    align-items: center;
  }

  .icon-container {
    font-size: 24px;
    color: #666;
    margin-right: 5px; /* Add margin to create space between icon and text */
  }

  .icon-container i {
    width: 32px;
    height: 32px;
    text-align: center;
  }

  .card-link {
    color: #333;
    text-decoration: none;
    font-weight: bold;
  }

  .btn-block {
    display: block;
  }

