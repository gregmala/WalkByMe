<%= simple_form_for [current_user, @location], html: { class: 'container text-center rounded', style: 'background-color: #81D6E3; padding: 2rem;' } do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control', style: 'border: 1px solid black;' } %>
  </div>
  <div class="form-group">
    <%= f.input :address, input_html: { class: 'form-control', style: 'border: 1px solid black;' } %>
  </div>
  <div class="form-group">
   <%= f.input :icon, as: :select, collection: { 'Home' => 'https://res.cloudinary.com/dzb3rykjc/image/upload/v1678955710/house_1_uxxgmr.png', 'Work' => 'https://res.cloudinary.com/dzb3rykjc/image/upload/v1678956786/briefcase_xfv5ie.png', 'Restaurant' => 'https://res.cloudinary.com/dzb3rykjc/image/upload/v1678955709/burger_ytvsbf.png' }, label: 'Select an icon', input_html: { class: 'form-control', style: 'border: 1px solid black;' } %>
  </div>
  <%= f.button :submit, class: 'btn btn-primary', style: 'background-color: #E38481; font-weight: bold; border: 0; border: 1px solid black;' %>
<% end %>

<style>
.container {
  height: 92vh;
  overflow: hidden;
}

.form-label {
  font-weight: 800;
  font-family: 'Noto', sans-serif
}

.form-control:focus {
  border-color: black;
  box-shadow: none;
}

.btn-primary {
  font-family: 'Noto', sans-serif !important;
}
</style>
