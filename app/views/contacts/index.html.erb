  }

  .icon-container i {
    width: 32px;
    height: 32px;
    text-align: center;
  }

  .card-link {
    color: #333;
    text-decoration: none;
    font-weight: bold;
  }

  .btn-block {
    display: block;
  }

  .card-icon {
    color: black;
    text-decoration: none;
  }

  .card-body {
  background-color: #fff;
  border-radius: 50px;
