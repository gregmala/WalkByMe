<div class="container">
  <div class="rounded contact-container">
    <div class="row justify-content-center">
      <% @contacts.each do |contact| %>
        <% if contact.user == current_user %>
          <div class="col-sm-6 col-md-4 mb-3">
            <div class="cardcontact rounded h-100">
              <div class="card-body d-flex align-items-center justify-content-between">
                <div class="card-body-info">
                  <%= link_to contact.label, user_contact_path(contact.user, contact), class: "card-link" %>
                </div>
                <div class="card-body-icons">
                  <div class="icon-container ml-auto"><%= link_to raw('<i class="fa-solid fa-pen-to-square text-black"></i>'), edit_user_contact_path(contact.user, contact), class: "card-icon" %></div>
                  <div class="icon-container ml-3"><%= link_to raw('<i class="fa-solid fa-xmark text-black"></i>'), user_contact_path(current_user, contact), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "card-icon" %></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="row justify-content-center">
      <div class="col-sm-6 col-md-4">
        <%= link_to "Add new contact", new_user_contact_path, class: "btn btn-success btn-block rounded" %>
      </div>
    </div>

    <div class="row justify-content-center mt-3">
      <div class="col-md-6 logo-container-contact">

        <img src="https://res.cloudinary.com/dzb3rykjc/image/upload/v1678790466/Il_mio_progetto_2_400x400_as3mvj.png" alt="WalkByMe Logo" class="logo-imagee">

      </div>
    </div>
  </div>
</div>

