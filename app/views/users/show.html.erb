<div>
  <h1> Hey <%= @user.first_name %>!</h1>
  <img src="https://res.cloudinary.com/dzb3rykjc/image/upload/v1678377319/WalkByMe/profile_picture_sara_xpiwma.jpg" alt="profile_picture">
  <div class="camera">
    <i class="fa fa-camera fa-lg upload-button"></i>
    <input class="file-upload" type="file" accept="image/*"/>
  </div>
  <div class="profile-card">
    <div class= "profile-card-info">
      <p id="label"><strong>Your name</strong></p>
      <p><%= @user.first_name %> <%= @user.last_name %></p>
    </div>
    <div class= "profile-card-info">
      <p id="label"><strong>Your email</strong></p>
      <p><%= @user.email %></p>
    </div>
    <div class="profile-card-info">
      <p id="label"><strong>Your phone</strong></p>
      <p><%= @user.phone_number %></p>
    </div>

  </div>
</div>

