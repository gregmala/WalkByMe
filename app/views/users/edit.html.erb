<div class="container-user-edit blue">
  <div class="form-edit-user ">
    <%= simple_form_for(@user) do |f| %>
      <%= f.input :first_name, input_html: {style: 'border: 1px solid black;'} %>
      <%= f.input :last_name, input_html: {style: 'border: 1px solid black;'} %>
      <%= f.input :email, input_html: {style: 'border: 1px solid black;'} %>
      <%= f.input :phone_number, input_html: {style: 'border: 1px solid black;'} %>
    <div class= "btn-edit-user">
      <%= f.button :submit, "Save", class: "text-save-edit-user" %>
    </div>
    <% end %>
  </div>
  <img src="https://res.cloudinary.com/dzb3rykjc/image/upload/v1678806875/WalkByMe/Background/edit_profile_hpa6vw.png" alt="drawing girl" class= "img-user-edit">
</div>
